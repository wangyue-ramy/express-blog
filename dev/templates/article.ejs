<%- include header %>

<% posts.forEach(function(post, index) { %>
    <p>
        <% if (user && user.username == post.username) { %>
            <a href="/edit/<%= post.username %>/<%= post.title %>" class="edit">编辑</a>
            <a href="/remove/<%= post.username %>/<%= post.title %>" class="edit">删除</a>
        <% } %>
    </p>
    <p class="info">
        作者: <a href="/u/<%= post.username %>"><%= post.username %></a>
        日期: <%= post.time.toISOString().slice(0, 10) %>
        <% if (post.tags.length > 0) { %>
            标签:
        <% } %>
        <% post.tags.forEach(function(tag, index) { %>
            <a class="tag" href="/tag/<%= tag %>"><%= tag %></a>
        <% }) %>
        共浏览了: <%= post.pv %>次
    </p>

    <p><%- post.text %></p>
<% }) %>

<%- include comment %>
<%- include footer %>